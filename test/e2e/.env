# Redefines values when deploying in production

# Configure application port
appPort=_COMPONENT_PORT_

# The global url prefix
appGlobalPrefix='explorer/_COMPONENT_NAME_/v1'

# The following environment variables allow to connect to the database
dbUser='root'
dbPassword='ultrapass'
dbHost='mongodb://localhost:27018/admin'
dbName='test'
dbPoolSize=3

# Specify the secret key to use to check the JWT token
jwtSecretKey='ultraSecretKey'
jwtEncryptionKey='ultraEncryptionKey'

### Log options
# Console level
consoleLogLevel=silly
# Format of logs json / flat
logFormat=flat
# Environment name which will be displayed in the logs
runningEnvironment=local
# Enables performance logging on http calls
performanceLogEnabled=true

# Enables mongoose debugging logs
mongooseDebug=true

# only useful for dev purpose
enableCORS=false

# broker endpoint
kafkaUrl=localhost:9092
schemaRegistryUrl=http://127.0.0.1:8081
useKafkaWithSSL=false
kafkaConsumerDBCollectionName=_COMPONENT_NAME_ConsumerBrokerEvent
kafkaPublisherDBCollectionName=_COMPONENT_NAME_ProducerBrokerEvent

# Specify the secret key to use to get an app token
serviceId=_COMPONENT_NAME_Service

# GraphQL
graphqlPlayground=true
graphqlDebug=true
